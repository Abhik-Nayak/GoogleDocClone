{
  "compilerOptions": {
    "target": "ES2022",                        
    "module": "nodenext",                      
    "rootDir": "./src",                   
    "outDir": "./dist",                        
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "types": ["node", "express"],             
    "noImplicitAny": false                    
  },
  "include": ["services/**/*"],
  "exclude": ["node_modules", "dist"]
}
